//==================== Helpers ====================
f_norm_tf(tf) =>
    string out = tf
    out := tf == "12H" ? "720" :
           tf == "8H"  ? "480" :
           tf == "6H"  ? "360" :
           tf == "4H"  ? "240" :
           tf == "3H"  ? "180" :
           tf == "2H"  ? "120" :
           tf == "1H"  ?  "60"  : tf
    out
src_tf = f_norm_tf(src_tf_in)

f_src(sym) =>
    request.security(sym, src_tf, close, gaps=barmerge.gaps_off, lookahead=barmerge.lookahead_off)

f_gauss(src, N, sigma) =>
    float num = 0.0, den = 0.0
    for i = 0 to N-1
        w = math.exp(-(i*i) / (2.0 * sigma * sigma))
        num += nz(src[i]) * w
        den += w
    den != 0 ? num/den : na

